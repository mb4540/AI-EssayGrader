# LLM Configuration
# Primary LLM: Gemini 2.5 Pro (Default)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-2.5-pro

# Fallback LLM: OpenAI GPT-4o
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Neon Database Configuration
# Get this from your Neon dashboard → Connection Details
DATABASE_URL=postgresql://user:password@host.neon.tech/dbname?sslmode=require

# Test Database Configuration (for integration tests)
# Get this from Neon dashboard → Development branch → Connection Details
TEST_DATABASE_URL=postgresql://user:password@host-dev.neon.tech/dbname?sslmode=require

# JWT Secret for Authentication
# Generate a secure random string for production
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Netlify Blobs (optional - for file storage)
ALLOW_BLOB_STORAGE=false

# Application URL
# For local development
APP_BASE_URL=http://localhost:8888
# For production, set this to your Netlify domain
# APP_BASE_URL=https://your-site.netlify.app
